  # prpath="$(echo $prpath | sed -e 's/acc_l2d/${BLUE}acc_l2d${CURRENT_FG}/')"
  # prpath="$(echo $prpath | sed -e 's/acc_lsx/${MAGENTA}acc_lsx${CURRENT_FG}/')"
  printf $prpath
}
