  # RED='\033[0;31m'
  # GREEN='\033[0;32m'
  # YELLOW='\033[0;33m'
  # BLUE='\033[0;34m'
  # MAGENTA='\033[0;35m'
  # CYAN='\033[0;36m'
  # PURPLE='\033[38;5;13m'
  # LIGHTGREY='\033[38;5;250m'
  # RESET='\033[0m'  # Reset to default color
  prpath=$(echo $PWD | sed -re "s/.site.*borneo.*cadence/\$site/" | sed -re "s/.site.*komodo.*cadence/\$ksite/")
  # prpath="$(echo $prpath | sed -e 's/acc_mdr/${YELLOW}acc_mdr${CURRENT_FG}/')"
  # prpath="$(echo $prpath | sed -e 's/acc_fed/${RED}acc_fed${CURRENT_FG}/')"
