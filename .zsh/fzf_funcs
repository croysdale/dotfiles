  echo $ZLE_STATE
  LBUFFER=$( cat ${HOME}/.zsh_logs/* | sed -e 's/.*\/dpc/\/dpc/' | sed -e s'/ .*//' | grep dpc | sort -u | fzf-tmux -p70%,50% -e +s +m -n..,1,2.. --layout=reverse --info=inline \
             --border --margin=1 --header=$'History of all directories\n\n')
  zle redisplay
}
